# Handling Image in django

1. Create a field of type ImageField
2. pip install pillow
3. In setting.py file add:
   STATIC_URL = 'static/'
   MEDIA_URL = '/images/'
   STATICFILES_DIRS = [
   BASE_DIR / 'static'
   ]
   MEDIA_ROOT = 'static/images'

Fixture
py manage.py dumpdata adminboundary.LalitpurMetro>LalitpurMetroFixture.json
py manage.py dumpdata adminboundary.LalitpurMetro>WardFixture.json
py manage.py dumpdata disasterApp.DisasterType > disastertype.json
py manage.py dumpdata disasterApp.Rating > Rating.json
py manage.py dumpdata disasterApp.ClusterType > clustertype.json
py manage.py dumpdata disasterApp.DisasterEvent > disasterevent.json

OGR INSPECT
python manage.py ogrinspect shp/Road/road_lalitpur.shp RoadModal --srid=4326 --mapping --multi
from django.contrib.gis.utils import LayerMapping
from LalitpurData.models import RoadModal
lm = LayerMapping(RoadModal, 'shp/Road/road_lalitpur.shp', roadmodal_mapping)
lm.save(verbose=True)